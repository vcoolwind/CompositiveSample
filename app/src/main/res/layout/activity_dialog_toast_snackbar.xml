<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialog_toast_snackbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vcoolwind.com.compositivesample.ui.DialogToastSnackbarActivity">

    <Button
        android:text="Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/button_dialog" />

    <Button
        android:text="Snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_dialog"
        android:layout_alignRight="@+id/button_dialog"
        android:layout_alignEnd="@+id/button_dialog"
        android:layout_marginTop="54dp"
        android:id="@+id/button_snackbar" />

    <Button
        android:text="Toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_snackbar"
        android:layout_alignLeft="@+id/button_snackbar"
        android:layout_alignStart="@+id/button_snackbar"
        android:layout_marginTop="91dp"
        android:id="@+id/button_toast" />
</RelativeLayout>
